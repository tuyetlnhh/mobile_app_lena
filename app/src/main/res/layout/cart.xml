<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#DADADA"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnGoBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:contentDescription="@string/btnBackDescription"
                    android:padding="12dp"
                    android:src="@drawable/back_30px"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/btnCart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingStart="15dp"
                    android:text="GIỎ HÀNG"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textCart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:text="GIỎ HÀNG"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginBottom="15dp"
                    android:background="#ffffff"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/productImage"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/image_2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:srcCompat="@drawable/image_2" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="12dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textProductName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Shiba Inu Toy"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textProductPrice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="100,000 VND"
                            android:textColor="#000000"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginVertical="10dp"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/btnSub"
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/btn_br0"
                                android:padding="0dp"
                                android:text="-"
                                android:textColor="#000000"
                                android:textSize="18sp" />

                            <EditText
                                android:id="@+id/editTextQuantity"
                                android:layout_width="70dp"
                                android:layout_height="match_parent"
                                android:background="@color/white"
                                android:ems="10"
                                android:hint="1"
                                android:inputType="numberDecimal"
                                android:padding="0dp"
                                android:textAlignment="center"
                                android:textAllCaps="false"
                                android:textColor="#000000"
                                android:textColorHint="#959595" />

                            <Button
                                android:id="@+id/btnAdd"
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/btn_br0"
                                android:padding="0dp"
                                android:text="+"
                                android:textColor="#000000"
                                android:textSize="18sp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/textTotalPrice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TỔNG: 100,000 VND"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/btnDelete"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:backgroundTint="#ffffff"
                        android:scaleType="centerCrop"
                        android:src="@drawable/icon_close_30px" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginBottom="15dp"
                    android:background="#ffffff"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/productImage2"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/image_3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:srcCompat="@drawable/image_3" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="12dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textProductName2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Shiba Inu Toy"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textProductPrice2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="100,000 VND"
                            android:textColor="#000000"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginVertical="10dp"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/btnSub2"
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/btn_br0"
                                android:padding="0dp"
                                android:text="-"
                                android:textColor="#000000"
                                android:textSize="18sp" />

                            <EditText
                                android:id="@+id/editTextQuantity2"
                                android:layout_width="70dp"
                                android:layout_height="match_parent"
                                android:background="@color/white"
                                android:ems="10"
                                android:hint="3"
                                android:inputType="numberDecimal"
                                android:padding="0dp"
                                android:textAlignment="center"
                                android:textAllCaps="false"
                                android:textColor="#000000"
                                android:textColorHint="#959595" />

                            <Button
                                android:id="@+id/btnAdd2"
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/btn_br0"
                                android:padding="0dp"
                                android:text="+"
                                android:textColor="#000000"
                                android:textSize="18sp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/textTotalPrice2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TỔNG: 150,000 VND"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/btnDelete2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:backgroundTint="#ffffff"
                        android:scaleType="centerCrop"
                        android:src="@drawable/icon_close_30px" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textTotalOrderPrice1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TỔNG ĐƠN ĐẶT HÀNG:"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/textTotalOrderPrice2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dp"
                        android:text="250,000 VND"
                        android:textColor="#959595"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llCoupon"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginVertical="30dp"
                    android:paddingHorizontal="10dp"
                    android:background="@drawable/shadow_bg"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iconCoupon"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_coupon_30px" />

                    <TextView
                        android:id="@+id/textCoupon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:paddingStart="10dp"
                        android:text="PHIẾU GIẢM GIÁ"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/iconAngleRight"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_angle_right_30px" />

                </LinearLayout>

                <Button
                    android:id="@+id/btnPay"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:backgroundTint="#FF0000"
                    android:text="THANH TOÁN"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btnKeepBuying"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:backgroundTint="#000000"
                    android:text="TIẾP TỤC MUA SẮM"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>